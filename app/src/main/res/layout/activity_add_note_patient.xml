<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".bottomnavigation.profile.extend.catatanKhusus.extendAddDataPatient.addNotePatient.addNotePatient"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:id="@+id/ck_main_rel"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/note_image_backbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_arrow_back_blackblack"
            />




        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/note_image_pro"
            android:layout_width="80dp"
            android:layout_toRightOf="@id/note_image_backbutton"
            android:layout_height="80dp"
            android:src="@drawable/userprofile"
            android:padding="15dp"
            app:civ_border_color="#fff"
            app:civ_border_width="2dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_toLeftOf="@id/note_img_done"
            android:layout_toRightOf="@id/note_image_pro"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:id="@+id/note_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:text="Nama"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                style="@style/TextAppearance.AppCompat.Caption"
                android:id="@+id/note_tv_medicalrecord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:text="Medical Record"
                android:textSize="20dp" />
            </LinearLayout>
        </RelativeLayout>


        <ImageView
            android:id="@+id/note_img_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_done_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"/>


    </RelativeLayout>

    <EditText
        android:id="@+id/note_et_note"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="Ketik Catatan....."/>
</LinearLayout>